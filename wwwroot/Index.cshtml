
@{
    ViewBag.Title = "Home page";
}
    <div class="row">
        <div class="col-md-6">
            <div class="product-info">
                <img src="~/Img/tải xuống.jpg" />
                <h3>Mug</h3>
                <ul class="product-props">
                    <li>Price: 5000VND</li>
                    <li>Artist: abc</li>
                    <li>Published date: </li>
                    <li>Title</li>
                    <li>Description</li>
                </ul>
                <button id="buyButton" class="btn btn-success">Buy</button>
            </div>
            <div id="theForm">
                <form>
                    <label>Your name:</label>
                    <br />
                    <input />
                    <br />
                    <label>Email:</label>
                    <br />
                    <input type="email" />
                    <br />
                    <label>Subject:</label>
                    <br />
                    <input type="text" />
                    <br />
                    <label>Message:</label>
                    <br />
                    <textarea rows="4"></textarea>
                    <br />
                    <input type="submit" value="Send message" />
                </form>
            </div>
            <div>
                <div id="login">Login</div>
                <form class="popup-form">
                    <div>
                        <label>Username:</label>
                        <input />
                    </div>
                    <div>
                        <label>Password:</label>
                        <input type="password" />
                    </div>
                    <div>
                        <input type="checkbox" />
                        <label>Remember me?</label>
                    </div>
                    <div>
                        <input type="submit" value="Login" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <p>This is a fun site to do some buying books</p>
        </div>
    </div>